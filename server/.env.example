# Example .env file for Book Finder API server

# MongoDB connection string (use MONGODB_URI for production Atlas)
MONGODB_URI=mongodb://localhost:27017/bookfinder
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/bookfinder

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# Open Library API base URL
OPEN_LIBRARY_API=https://openlibrary.org

# Client URL for CORS (frontend URL)
CLIENT_URL=http://localhost:5173

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:5173

# Server port
PORT=5000

# Node environment
NODE_ENV=development

# Email configuration (SMTP - Primary)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative email configuration (Resend - Fallback for deployment)
RESEND_API_KEY=your-resend-api-key
# Note: Test accounts can only send to your own verified email address
# For production/full functionality, verify a domain at resend.com/domains
